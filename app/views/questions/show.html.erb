<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => Question %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:question) %></dt>
      <dd><pre class="prettyprint"><%= @question.question %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:subject) %></dt>
      <dd><pre class="prettyprint"><%= @question.subject %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:topic) %></dt>
      <dd><pre class="prettyprint"><%= @question.topic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:grade) %></dt>
      <dd><pre class="prettyprint"><%= @question.grade %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type_of_question) %></dt>
      <dd><pre class="prettyprint"><%= @question.type_of_question %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image) %></dt>
      <dd><pre class="prettyprint"><%= @question.image %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:school) %></dt>
      <dd><pre class="prettyprint"><%= @question.school %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:owner) %></dt>
      <dd><pre class="prettyprint"><%= @question.owner %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

